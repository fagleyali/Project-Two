<%- include('../partials/header') %>
<div class="container">
        <header class="jumbotron">
                <h1>Welcome to travel destinations of Bangladesh</h1>
                <p>See the travel and tourism spots of Bangladesh</p>
            
            </header>
        <div class="row">
                        <% destinations.forEach(function(d,i){%>        
                 
                        <div class="col-md-4">
                          <div class="thumbnail">
                            <a href="/destinations/<%=d._id%>">
                              <img src="<%=d.imageUrl%>" alt="<%=d.name%>" style="width:100%">
                              <div class="caption">
                                <p>Lorem ipsum...</p>
                              </div>
                            </a>
                          </div>
                        </div>
        
        <% if ((i+1) % 3 === 0 ){%>
        </div>
        <div class="row">
        <%}%>
        <%})%>
        </div>
 </div>

<%- include('../partials/footer')%>